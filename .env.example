# Database Configuration
# PostgreSQL connection string for the main application database
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@host:port/database

# Supabase Configuration
# Your Supabase project URL (found in Supabase dashboard under Settings > API)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Service Role Key
# Service role key with admin privileges (found in Supabase dashboard under Settings > API)
# WARNING: Keep this secret - it has full access to your Supabase project
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# JWT Authentication
# Secret key used for signing and verifying JWT tokens
# Generate a secure random key (e.g., using openssl rand -base64 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Email Server Configuration (Gmail example)
# Email address used for sending emails from the application
EMAIL_SERVER_USER=your-email@example.com

# Email server password or app-specific password (for Gmail, use an app password)
EMAIL_SERVER_PASS=your_email_password_or_app_password

# SMTP server hostname
EMAIL_SERVER_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL)
EMAIL_SERVER_PORT=587

# Web Application URL
# Base URL of the frontend web application (used for generating links in emails, etc.)
WEBAPP_URL=http://localhost:3000

# Slack Integration
# Slack App Client ID (found in Slack App settings under Basic Information)
SLACK_CLIENT_ID=your_slack_client_id

# Slack App Client Secret (found in Slack App settings under Basic Information)
SLACK_CLIENT_SECRET=your_slack_client_secret

# Slack Signing Secret (found in Slack App settings under Basic Information)
# Used to verify requests from Slack
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Spotify Integration
# Spotify App Client ID (found in Spotify Developer Dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id

# Spotify App Client Secret (found in Spotify Developer Dashboard)
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Google Maps API
# Google Maps API key for geolocation features
# Get from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Stripe Payment Processing
# Stripe Secret Key (found in Stripe Dashboard under Developers > API keys)
# Use test keys (sk_test_...) for development, live keys (sk_live_...) for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe Publishable Key (found in Stripe Dashboard under Developers > API keys)
# Use test keys (pk_test_...) for development, live keys (pk_live_...) for production
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Webhook Secret
# Secret used to verify webhook requests from Stripe
# Found in Stripe Dashboard under Developers > Webhooks > Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Product/Price IDs
# Product price ID for WelcomePage subscription (found in Stripe Dashboard under Products)
STRIPE_WELCOMEPAGE_PRICE_ID=prod_your_welcomepage_price_id

# Product price ID for hosting subscription (found in Stripe Dashboard under Products)
STRIPE_HOSTING_PRICE_ID=prod_your_hosting_price_id

# OpenAI API Configuration
# OpenAI API key for AI-powered features (e.g., game question generation)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Alternative Database Configuration (commented out)
# Uncomment and use this format if using direct PostgreSQL connection (not pooler)
# postgresql+psycopg2://username:password@host:port/database

# Alternative: SQLite Database (commented out)
# For local development only - use PostgreSQL in production
# DATABASE_URL=sqlite:////path/to/your/database.db

